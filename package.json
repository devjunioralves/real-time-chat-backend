{
  "name": "real-time-chat-backend",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Junior Alves <jrwanderley17@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=20.17.0"
  },
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig-build.json",
    "dev": "nodemon --watch 'src/**' --exec 'ts-node -r tsconfig-paths/register src/index.ts' -e ts",
    "lint": "eslint .",
    "lint:fix": "eslint 'src/**' --fix",
    "style": "yarn prettier --check 'src/**'",
    "test": "jest --passWithNoTests --silent --noStackTrace --runInBand",
    "test:verbose": "jest --passWithNoTests --runInBand",
    "test:unit": "yarn test -- --watch -c jest-unit-config.js",
    "test:integration": "yarn test -- --watch -c jest-integration-config.js",
    "test:staged": "yarn test -- --findRelatedTests",
    "test:ci": "yarn test -- --coverage",
    "prepare": "husky install"
  },
  "dependencies": {
    "class-transformer": "^0.5.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "module-alias": "^2.2.3",
    "mongodb": "^5.2.0",
    "mongoose": "^8.6.1",
    "redis": "^4.7.0",
    "reflect-metadata": "^0.2.2",
    "socket.io": "^4.7.5",
    "ts-node": "^10.9.2",
    "tsyringe": "^4.8.0"
  },
  "devDependencies": {
    "@shelf/jest-mongodb": "^4.1.7",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.0",
    "@types/module-alias": "^2.0.4",
    "@types/mongodb": "^4.0.7",
    "@types/node": "^22.5.1",
    "@types/redis": "^4.0.11",
    "@types/socket.io": "^3.0.2",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "git-commit-msg-linter": "^4.9.4",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.0",
    "nodemon": "^3.1.4",
    "prettier": "^2.8.7",
    "ts-jest": "^29.0.5",
    "typescript": "*"
  }
}
