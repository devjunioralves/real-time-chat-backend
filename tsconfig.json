{
  "compilerOptions": {
    "target": "ES2022",
    "rootDir": "src",
    "outDir": "dist",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": "src",
    "paths": {
      "@application/*": ["application/*"],
      "@config/*": ["config/*"],
      "@logger/*": ["logger/*"],
      "@di/*": ["di/*"],
      "@infra/*": ["infra/*"],
      "@presentation/*": ["presentation/*"],
      "@domain/*": ["domain/*"],
      "@shared/*": ["shared/*"],
      "@src/*": ["./*"]
    },
    "esModuleInterop": true,
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src", "tests"]
}
